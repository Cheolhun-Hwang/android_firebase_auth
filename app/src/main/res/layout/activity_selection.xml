<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SelectionActivity">
    <Button
        android:id="@+id/select_email_auth"
        android:onClick="intentMainActivity"
        android:text="@string/show_text_email_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/select_phone_auth"
        android:onClick="intentPhoneActivity"
        android:text="@string/show_text_phone_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>